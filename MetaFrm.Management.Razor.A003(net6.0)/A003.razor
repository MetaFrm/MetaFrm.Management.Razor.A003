                    </div>
                </Control>
            </GroupControl>
            <GroupControl TItem="CommonClassModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.CLASS_ID))" HeaderNewString="Datetime value" HeaderEditString="Datetime value" CssClassInnerContainer="p-2 bg-secondary" InnerContainer="true"
                          Minimize="(() => {this.GroupWindowStatusDatetime = GroupWindowStatus.Minimize; return;} )" Maximize="(() => {this.GroupWindowStatusDatetime = GroupWindowStatus.Maximize;return;} )" GroupWindowStatus="this.GroupWindowStatusDatetime">
                <Control>
                    <div class="row">
                        <FieldControl Label="Datetime name1" CssClassDiv="py-2 col-md-6"><Control><InputText id="datetimename1" class="form-control" placeholder="" @bind-Value="this.SelectItem.DATETIME_VALUE1" /><ValidationMessage For="@(()=>this.SelectItem.DATETIME_VALUE1)" /></Control></FieldControl>
                        <FieldControl Label="Datetime name2" CssClassDiv="py-2 col-md-6"><Control><InputText id="datetimename2" class="form-control" placeholder="" @bind-Value="this.SelectItem.DATETIME_VALUE2" /><ValidationMessage For="@(()=>this.SelectItem.DATETIME_VALUE2)" /></Control></FieldControl>
                    </div>
                    <div class="row">
                        <FieldControl Label="Datetime name3" CssClassDiv="py-2 col-md-6"><Control><InputText id="datetimename3" class="form-control" placeholder="" @bind-Value="this.SelectItem.DATETIME_VALUE3" /><ValidationMessage For="@(()=>this.SelectItem.DATETIME_VALUE3)" /></Control></FieldControl>
                        <FieldControl Label="Datetime name4" CssClassDiv="py-2 col-md-6"><Control><InputText id="datetimename4" class="form-control" placeholder="" @bind-Value="this.SelectItem.DATETIME_VALUE4" /><ValidationMessage For="@(()=>this.SelectItem.DATETIME_VALUE4)" /></Control></FieldControl>
