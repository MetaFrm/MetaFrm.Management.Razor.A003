@using MetaFrm.Control
@using MetaFrm.Management.Razor.Models
@using MetaFrm.Razor.Command
@using MetaFrm.Razor.DataGrid
@using MetaFrm.Razor.Dictionary
@using MetaFrm.Razor.Field
@using MetaFrm.Razor.Group
@using MetaFrm.Razor.Search
@using MetaFrm.Razor.Title
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@inherits BaseComponent

<TitleControl Title="@this.GetAttribute("Description")"></TitleControl>

<DataGridControl TItem="CommonClassModel" @ref="this.DataGridControl" Columns="this.ColumnDefinitions" DataItems="this.A003ViewModel.SelectResultModel" PagingEnabled="true"
                 TableClass="table-hover"
                 RowAdd="this.New"
                 MovePage="this.Search"
                 RowModify="this.RowModify">
    <SearchInputControl>
        <input type="text" class="form-control rounded-start" placeholder="Search" @bind-value="@this.A003ViewModel.SearchModel.SEARCH_TEXT" @onkeyup="@SearchKeydown" />
    </SearchInputControl>
    <SearchButtonControl>
        <button class="btn btn-outline-primary btn-rounded-end" type="button" @onclick="(() => this.OnSearch())">
            <span class="oi oi-magnifying-glass" />
        </button>
    </SearchButtonControl>
</DataGridControl>

<ModalControl TItem="CommonClassModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.CLASS_ID))">
    <Control>
        <EditForm class="container" Model="@this.SelectItem" OnValidSubmit="this.Save">
            <DataAnnotationsValidator />

            <FieldControl Label="Class ID" Value="this.SelectItem.CLASS_ID" CssClassDiv="pt-2 pb-1"></FieldControl>

            <div class="row py-2">
                <FieldControl Label="Class name" CssClassDiv="py-2 col-md-6">
                    <Control>
                        <InputText id="classname" class="form-control" placeholder="Class name" @bind-Value="this.SelectItem.CLASS_NAME" />
                        <ValidationMessage For="@(()=>this.SelectItem.CLASS_NAME)" />
                    </Control>
                </FieldControl>
                <FieldControl Label="Key name" CssClassDiv="py-2 col-md-6">
                    <Control>
                        <InputText id="keyname" class="form-control" placeholder="Key name" @bind-Value="this.SelectItem.KEY_VALUE" />
                        <ValidationMessage For="@(()=>this.SelectItem.KEY_VALUE)" />
                    </Control>
                </FieldControl>
            </div>
            <div class="row py-2">
                <FieldControl Label="Inactive" CssClassControl="row">
                    <Control>
                        <div class="py-1 col-md-3">
                            <InputDate id="inactivedate" class="form-control" placeholder="Inactive Date" Type="InputDateType.Date" @bind-Value="this.SelectItem.INACTIVE_DATE" @bind-Value:format="yyyy-MM-dd" />
                        </div>
                        <div class="py-1 col-md-3">
                            <InputDate id="inactivetime" class="form-control" placeholder="Inactive Time" Type="InputDateType.Time" @bind-Value="this.SelectItem.INACTIVE_DATE" @bind-Value:format="HH:mm" />
                        </div>
                        <ValidationMessage For="@(()=>this.SelectItem.INACTIVE_DATE)" />
                    </Control>
                </FieldControl>
            </div>
            <GroupControl TItem="CommonClassModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.CLASS_ID))" HeaderNewString="Text value" HeaderEditString="Text" CssClassInnerContainer="p-2 bg-secondary" InnerContainer="true"
                          Minimize="(() => {this.GroupWindowStatusText = GroupWindowStatus.Minimize; return;} )" Maximize="(() => {this.GroupWindowStatusText = GroupWindowStatus.Maximize; return;} )" GroupWindowStatus="this.GroupWindowStatusText">
                <Control>
                    <div class="row">
                        <FieldControl Label="Text name1" CssClassDiv="py-2 col-md-6"><Control><InputText id="textname1" class="form-control" placeholder="" @bind-Value="this.SelectItem.TEXT_VALUE1" /><ValidationMessage For="@(()=>this.SelectItem.TEXT_VALUE1)" /></Control></FieldControl>
                        <FieldControl Label="Text name2" CssClassDiv="py-2 col-md-6"><Control><InputText id="textname2" class="form-control" placeholder="" @bind-Value="this.SelectItem.TEXT_VALUE2" /><ValidationMessage For="@(()=>this.SelectItem.TEXT_VALUE2)" /></Control></FieldControl>
                    </div>
                    <div class="row">
