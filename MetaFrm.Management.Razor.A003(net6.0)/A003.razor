                    </div>
                </Control>
            </GroupControl>
            <GroupControl TItem="CommonClassModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.CLASS_ID))" HeaderNewString="Int value" HeaderEditString="Int value" CssClassInnerContainer="p-2 bg-secondary" InnerContainer="true"
                          Minimize="(() => {this.GroupWindowStatusInt = GroupWindowStatus.Minimize; return;} )" Maximize="(() => {this.GroupWindowStatusInt = GroupWindowStatus.Maximize; return;} )" GroupWindowStatus="this.GroupWindowStatusInt">
                <Control>
                    <div class="row">
                        <FieldControl Label="Int name1" CssClassDiv="py-2 col-md-6"><Control><InputText id="intname1" class="form-control" placeholder="" @bind-Value="this.SelectItem.INT_VALUE1" /><ValidationMessage For="@(()=>this.SelectItem.INT_VALUE1)" /></Control></FieldControl>
                        <FieldControl Label="Int name2" CssClassDiv="py-2 col-md-6"><Control><InputText id="intname2" class="form-control" placeholder="" @bind-Value="this.SelectItem.INT_VALUE2" /><ValidationMessage For="@(()=>this.SelectItem.INT_VALUE2)" /></Control></FieldControl>
                    </div>
                    <div class="row">
                        <FieldControl Label="Int name3" CssClassDiv="py-2 col-md-6"><Control><InputText id="intname3" class="form-control" placeholder="" @bind-Value="this.SelectItem.INT_VALUE3" /><ValidationMessage For="@(()=>this.SelectItem.INT_VALUE3)" /></Control></FieldControl>
                        <FieldControl Label="Int name4" CssClassDiv="py-2 col-md-6"><Control><InputText id="intname4" class="form-control" placeholder="" @bind-Value="this.SelectItem.INT_VALUE4" /><ValidationMessage For="@(()=>this.SelectItem.INT_VALUE4)" /></Control></FieldControl>
