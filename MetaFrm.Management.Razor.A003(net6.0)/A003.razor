                        <FieldControl Label="Text name6" CssClassDiv="py-2 col-md-6"><Control><InputText id="textname6" class="form-control" placeholder="" @bind-Value="this.SelectItem.TEXT_VALUE6" /><ValidationMessage For="@(()=>this.SelectItem.TEXT_VALUE6)" /></Control></FieldControl>
