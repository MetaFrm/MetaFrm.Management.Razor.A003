                    <div class="row">
                        <FieldControl Label="Datetime name5" CssClassDiv="py-2 col-md-6"><Control><InputText id="datetimename5" class="form-control" placeholder="" @bind-Value="this.SelectItem.DATETIME_VALUE5" /><ValidationMessage For="@(()=>this.SelectItem.DATETIME_VALUE5)" /></Control></FieldControl>
                    </div>
                </Control>
            </GroupControl>

            <CommandControl TItem="CommonClassModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.CLASS_ID))" SaveIsSubmit="true" New="this.New" Copy="this.Copy" Delete="this.Delete" />
        </EditForm>
    </Control>
</ModalControl>